@model IEnumerable<ProRecruit.CandidateCertification>

@{
    ViewBag.Title = "Certifications Multiple";
}

<h2>Your Certifications</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CertificationTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CertificationDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CertificationTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CertificationDescription)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
            </td>
        </tr>
    }

</table>

