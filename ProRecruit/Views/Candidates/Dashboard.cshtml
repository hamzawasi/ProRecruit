@model ProRecruit.Candidate
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h2>Profile Dashboard</h2>

    <div class="row">
        <div class="col-md-6">
            <h3>Welcome - @Model.FirstName @Model.LastName</h3>
            <h4>
                You can customize your profile here
            </h4>
        </div>

        <div class="col-md-3">
            <div>
                @Html.ActionLink("Customize Your CV", "AddCandidateQualifications", "CV", new { @*id = Model.UserId*@ }, new { @class = "btn btn-primary btn-lg" })
            </div>
        </div>

        <div class="col-md-3">
            <div>
                @Html.ActionLink("View Your Profile", "Details", "Candidates", new { id = Model.UserId }, new { @class = "btn btn-primary btn-lg" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div>
                @Html.ActionLink("View All Jobs", "ViewAllJobs", "Jobs", null , new { @class = "btn btn-primary btn-lg" })
            </div>
        </div>
    </div>
</div>

