@model IEnumerable<ProRecruit.Job>
@{
    ViewBag.Title = "ViewAllJobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View All Jobs </h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DatePublished)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateApplyBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalaryRange)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FunctionalArea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Organization.Name)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatePublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateApplyBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaryRange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FunctionalArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization.Name)
            </td>
            <td>
                @Html.ActionLink("View", "Details", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Apply", "ApplyForJob", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Save Job", "SaveCandidateJob", new { jobId = item.Id })
            </td>
        </tr>
    }

</table>

<script src="~/Scripts/jquery-1.10.2.js"></script>
