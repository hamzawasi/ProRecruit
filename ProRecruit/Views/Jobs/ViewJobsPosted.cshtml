@model IEnumerable<ProRecruit.Job>

@{
    ViewBag.Title = "ViewJobsPosted";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Posted Jobs</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DatePublished)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateApplyBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalaryRange)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FunctionalArea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobShift)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReqYearsOfExp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AgeRequirement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Organization.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.JobQualifications.Qualification.QualificationName)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatePublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateApplyBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaryRange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FunctionalArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobShift)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>+
                @Html.DisplayFor(modelItem => item.ReqYearsOfExp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeRequirement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization.Name)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.JobQualifications.Qualification.QualificationName)
            </td>*@
            <td>
                @Html.ActionLink("View Candidates Applied", "ViewCandidatesApplied", "Jobs", new { id = item.Id }, new { @class = "btn btn-primary"}) |
                @Html.ActionLink("Add Qualifications", "AddJobQualifications", "Jobs", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>