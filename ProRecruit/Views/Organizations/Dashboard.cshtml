@model ProRecruit.Organization
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h2>Profile Dashboard</h2>

    <div class="row">
        <div class="col-md-3">
            <h3>Welcome - @Model.Name</h3>
            <h4>
                You can manage your profile Here
            </h4>
        </div>

        <div class="col-md-3">
            <div>
                @Html.ActionLink("Post a job", "Create", "Jobs", new { @*id = Model.UserId*@ }, new { @class = "btn btn-primary btn-lg" })
            </div>
        </div>

        <div class="col-md-3">
            <div>
                @Html.ActionLink("Manage Jobs", "ViewJobsPosted", "Jobs", new { id = Model.UserId }, new { @class = "btn btn-primary btn-lg" })
            </div>
        </div>

        <div class="col-md-3">
            <div>
                @Html.ActionLink("View Your Profile", "Details", "Organizations", new { id = Model.UserId }, new { @class = "btn btn-primary btn-lg" })
            </div>
        </div>
    </div>
</div>